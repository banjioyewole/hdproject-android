            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/titleBacking"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="16dp"
                    android:typeface="serif"
                    android:textColor="@android:color/white"
