                <TextView
                    android:layout_margin="16dp"
                    android:typeface="monospace"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apache_license"

                    />

            </FrameLayout>
        </LinearLayout>

        <!--Volley-->
